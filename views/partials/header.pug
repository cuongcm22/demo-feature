doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title #{titlePage}
  link(href='/css/reset.css' rel='stylesheet')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='/css/partials/header.css' rel='stylesheet')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css' rel='stylesheet')

header.header
  .container
    nav.navbar.navbar-expand-lg.navbar-light
      .container-fluid
        .navigation-section
          a.navbar-brand(href='/')
            img#logo-page-primary.me-3(src='/css/contents/home/img/gallery/logo.png' alt='')
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link#userNameID.text-primary
            each route, nameRoute in routes
              li.nav-item
                a.nav-link(href=route) #{nameRoute}
            li#btnLogout.nav-item
              a.nav-link.text-danger(href='/user/logout') Logout
              
