include ../../main.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Supplier Form
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css")
  body
    .container.my-5
      h2#supplierModalLabel.modal-title Thêm mới nhà cung cấp
      form#supplierForm(action="/suppliers/add", method="post", enctype='application/json')
        .mb-3
          label(for="name", class="form-label") Tên nhà cung cấp
          input#name.form-control(type="text", name="name", placeholder="Enter name", required)
          div.invalid-feedback Please enter a name.
        .mb-3
          label(for="address", class="form-label") Địa chỉ
          input#address.form-control(type="text", name="address", placeholder="Enter address", required)
          div.invalid-feedback Please enter an address.
        .mb-3
          label(for="phone", class="form-label") Số điện thoại
          input#phone.form-control(type="tel", name="phone", placeholder="Enter phone number", required)
          div.invalid-feedback Please enter a valid 10-digit phone number.
        .mb-3
          label(for="email", class="form-label") Địa chỉ email
          input#email.form-control(type="email", name="email", placeholder="Enter email", required)
          div.invalid-feedback Please enter a valid email address in the format abc@example.com.
        button.btn.btn-primary(type="submit") Tạo mới
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js")
    script.
      (function () {
        'use strict'

        var form = document.getElementById('supplierForm')

        form.addEventListener('submit', function (event) {
          if (!form.checkValidity() || !validatePhone() || !validateEmail()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        })

        function validatePhone() {
          var phoneInput = document.getElementById('phone')
          var phoneRegex = /^\d{10}$/
          return phoneRegex.test(phoneInput.value)
        }

        function validateEmail() {
          var emailInput = document.getElementById('email')
          var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
          return emailRegex.test(emailInput.value)
        }
      })()
