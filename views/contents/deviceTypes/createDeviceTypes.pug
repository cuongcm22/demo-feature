doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Add Device Type
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
.container.mt-5
  h2 Add Device Type
  form(action='/devicetypes/add' method='POST')
    .mb-3
      label.form-label(for='nameInput') Name
      input#nameInput.form-control(type='text' name='name' required='')
    .mb-3
      label.form-label(for='descriptionInput') Description
      textarea#descriptionInput.form-control(name='description')
    button.btn.btn-primary(type='submit') Submit
