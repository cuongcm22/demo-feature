include ../../main.pug

.container.mt-5
  h2 Bảng loại thiết bị
  .form-group.search-box
    input#searchInput.form-control(type='text' placeholder='Search...')
    button#searchButton.btn.btn-outline-success(type='button') Tìm kiếm

  .form-check.form-switch
    .mt-3
      input#flexSwitchCheckDefault.switchRetrieveAllData.form-check-input(type='checkbox' role='switch')
      label.form-check-label(for='flexSwitchCheckDefault') Hiển thị tất cả

  table.table.table-striped
    thead
      tr
        th STT
        th Tên
        th Mô tả
        th Chức năng
    tbody#deviceTypesTableBody
      // Data will be filled dynamically
      .warrper.text-center
        #spinner.spinner-border.text-primary(role='status')
          span.visually-hidden Loading...
  .d-flex.align-items-center.justify-content-center
    nav(aria-label='Page navigation')
      ul#pagination.pagination
// Modal for displaying device type details
#deviceTypeModal.modal.fade(tabindex='-1' aria-labelledby='deviceTypeModalLabel' aria-hidden='true')
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        h5#deviceTypeModalLabel.modal-title Thông tin thiết bị
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        // Form for device type details
        form#deviceTypeForm
            .mb-3
                label.form-label(for='nameInput') Name
                input#nameInput.form-control(type='text' required='')
            .mb-3
                label.form-label(for='descriptionInput') Description
                textarea#descriptionInput.form-control

script.
    var mockData = !{deviceTypes}

script(src="/javascript/deviceTypes/detailDeviceTypes.js")