doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Supplier Form
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css")

  body
    .container.my-5
      form(action="/suppliers/add", method="post")
        .mb-3
          label(for="name" class="form-label") Name
          input#name.form-control(type="text", name="name", placeholder="Enter name" required)
        .mb-3
          label(for="address" class="form-label") Address
          input#address.form-control(type="text", name="address", placeholder="Enter address" required)
        .mb-3
          label(for="phone" class="form-label") Phone
          input#phone.form-control(type="tel", name="phone", placeholder="Enter phone number" required)
        .mb-3
          label(for="email" class="form-label") Email
          input#email.form-control(type="email", name="email", placeholder="Enter email" required)
        button.btn.btn-primary(type="submit") Submit

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js")
